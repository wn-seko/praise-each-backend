{
  "name": "praise-each-backend",
  "description": "Praise Each",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "watch": "run-p webpack:watch dev:watch",
    "dev": "node -r dotenv/config dist/server.js",
    "dev:watch": "node-dev -r dotenv/config dist/server.js",
    "clean": "rimraf dist/*",
    "webpack:watch": "webpack --config webpack.config.build.js --watch --mode=development",
    "webpack:build-dev": "webpack --config webpack.config.build.js --mode=development",
    "webpack:build": "webpack --config webpack.config.build.js",
    "build": "npm-run-all clean webpack:build",
    "lint": "eslint --ext .js,.json,.ts,.tsx --ignore-path .eslintignore .",
    "lint:fix": "yarn lint --fix",
    "knex": "ts-node -r dotenv/config ./node_modules/.bin/knex",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wn-seko/praise-each-backend.git"
  },
  "author": "wn-seko",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wn-seko/praise-each-backend/issues"
  },
  "homepage": "https://github.com/wn-seko/praise-each-backend#readme",
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "@koa/multer": "^3.0.0",
    "@koa/router": "^9.0.1",
    "dayjs": "^1.10.6",
    "http-errors": "^1.7.3",
    "inversify": "^5.0.1",
    "knex": "^0.21.1",
    "koa": "^2.12.0",
    "koa-bodyparser": "^4.3.0",
    "koa-session": "^6.0.0",
    "pg": "^8.2.1",
    "reflect-metadata": "^0.1.13",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/http-errors": "^1.6.3",
    "@types/jest": "^26.0.0",
    "@types/koa": "^2.11.3",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa__cors": "^3.0.1",
    "@types/koa__router": "^8.0.2",
    "@types/node": "^14.0.11",
    "@types/uuid": "^8.3.1",
    "@types/webpack": "^4.41.17",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-webpack": "^0.12.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsdoc": "^30.0.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "fork-ts-checker-webpack-plugin": "^4.1.6",
    "jest": "^26.0.1",
    "node-dev": "^4.0.0",
    "node-noop": "^1.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.0",
    "ts-loader": "^7.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^4.4.2",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  }
